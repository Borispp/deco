.wrapper
  background #fff
  margin 0 auto
  overflow-x hidden
  width 100%
  max-width 1340px
  box-shadow 0 0 50px rgba(0,0,0,0.2)

.base-col
  width 100%
  max-width 920px
  padding 0 30px
  margin 0 auto
  box-sizing border-box

.base-col-large
  width 100%
  max-width 1000px
  margin 0 auto
  box-sizing border-box


@media (max-width 720px)
  .base-col
    padding 0 15px
