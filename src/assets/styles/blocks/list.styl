.list-items
  font-size 0
  margin 0 -5px 20px

  &.within-buttons
    .list-description
      min-height 168px

  .list-item
    display inline-block
    vertical-align top
    font-size 16px
    width 33.3%
    padding 0 5px
    margin-bottom 30px
    box-sizing border-box

  .list-image
    width 100%
    height 290px
    background-size cover
    margin-bottom 16px

  .list-headline,
  .list-description,
  .list-button
    padding 0 18px
    box-sizing border-box

  .list-headline
    color $violet
    font 600 28px 'PT Sans Narrow'

  .list-description
    line-height 24px
    letter-spacing -.5px
    margin-top 6px

    p
      margin-bottom 12px

  .list-button
    margin-top 20px

.list-main-button
  text-align center

.list-icons
  font-size 0
  margin-bottom -50px

  li
    width 50%
    display inline-block
    vertical-align top
    font-size 20px
    line-height 30px
    position relative
    box-sizing border-box
    margin-bottom 46px

    &:after
      content ''
      display inline-block
      width 1px
      height 80px
      vertical-align middle

    .list-icons-text
      display inline-block
      vertical-align middle
      padding-left 16px
      width calc(100% - 120px)

    i
      display inline-block
      vertical-align middle
      text-align center
      width 82px

      &:before
        content ''
        display inline-block

      &.thumb:before
        sprite($s-thumb)

      &.shield:before
        sprite($s-shield)

      &.reparation:before
        sprite($s-reparation)

      &.garbage:before
        sprite($s-garbage)

.list-images
  font-size 0
  text-align center
  padding-top 10px
  margin 0 -20px

  li
    display inline-block
    margin 0 20px
    overflow hidden
    border-radius 6px
    border 6px solid $violet
    position relative

    &:hover .list-images-description
      opacity 1

  .list-images-description
    background rgba(131,31,129,.7)
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    text-align center
    opacity 0
    transition opacity .2s

    p
      color $white
      font-size 16px
      line-height 24px
      position absolute
      top 50%
      transform translate(0, -50%)

.list-questions
  padding-bottom 16px

  > li
    padding-bottom 4px


  input[name="questions"]
    display none

    &:checked + .list-questions-question
      font-weight bold

      &:before
        top -6px
        sprite($s-minus)

      + .list-questions-response
        display block


  .list-questions-question
    font-size 20px
    cursor pointer

    &:before
      content ''
      display inline-block
      margin-right 18px
      position relative
      top 3px
      sprite($s-plus)

  .list-questions-response
    display none
    font-size 16px
    padding 16px 0 14px 40px
    box-sizing border-box

.list-reviews
  font-size 0
  margin 0 -15px
  padding-top 10px
  padding-bottom 40px

  > li
    width 33.3%
    display inline-block
    vertical-align top
    padding 0 15px
    box-sizing border-box
    font-size 16px
    text-align center

  .list-reviews-avatar
    display inline-block
    width 128px
    height 128px
    overflow hidden
    border-radius 50%
    background-size cover
    background-position center center
    margin-bottom 12px

  .list-reviews-location
    color $grey-darker
    font-size 12px
    margin-top -2px
    margin-bottom 10px

  .list-reviews-headline
    font-weight bold
    margin-bottom 4px

  .list-reviews-review
    font-style italic
    line-height 24px

.list-slider
  cursor pointer

.list-slider,
.list-slider-full

  .slick-prev,
  .slick-next
    z-index 1
    background-color rgba(69,37,20,.6) !important
    border-radius 50%
    width 40px
    height 40px
    transition background-color .2s

    &:hover
      background-color rgba(69,37,20,.8) !important

    &:before
      content ''
      display inline-block
      margin-left 2px
      sprite($s-arrow)

  .slick-prev
    left 10px
    &:before
      transform rotate(-180deg)
      margin-left -2px

  .slick-next
    right 10px

  .slick-slide
    background-size cover
    background-position center center

.list-slider-full
  > div
    width 100%
    height calc(100vh - 50px)

  .slick-slide
    text-align center
    img
      height 100%
      display inline-block

  .slick-prev
    left 20px

  .slick-next
    right 20px

@media (max-width 1100px)
  .list-items
    .list-image
      height 240px

  .list-images
    margin 0 -10px

    li
      width calc(25% - 32px)
      margin 0 10px
      img
        width 100%

@media (max-width 1000px)

  .list-items
    .list-image
      height 200px

@media (max-width 800px)
  .list-items .list-image
    height 160px

@media (max-width 720px)
  .list-items
    margin-bottom 10px

    .list-item
      font-size 15px
      margin-bottom 10px
      width 50%

    .list-button
      margin 10px 0

    .list-main-button
      margin-top 10px

    &.within-buttons .list-description
      min-height auto

  .list-icons
    li
      font-size 16px
      line-height 25px
      width 100%

  .list-images
    margin-bottom -20px

    li
      width calc(50% - 40px)
      margin-bottom 20px

  .list-questions
    .list-questions-question
      font-size 16px

  .list-reviews
    margin-bottom -20px

    > li
      width 100%
      margin-bottom 20px

@media (max-width 550px)
  .list-items
    margin-bottom 10px

    .list-item
      font-size 15px
      margin-bottom 10px
      width 100%

    .list-image
      height 220px

  .list-slider-full
    .slick-prev
      left 10px

    .slick-next
      right 10px
