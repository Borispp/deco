.section
  padding 44px 0 10px

.section-head
  text-align center
  margin-bottom 30px

.section-headline
  font 600 40px/44px 'PT Sans Narrow'

  &.black
    color $black

  &.white
    color $white

  &.violet
    color $violet

.section-description
  font-size 20px
  letter-spacing -.5px
  line-height 20px
  margin 20px 0 -12px


.section-statistic
  text-align center
  font-size 0
  margin 0 0 60px

  li
    display inline-block
    vertical-align top
    width 33.3%

    span
      font 600 94px 'PT Sans Narrow'
      color $violet

      i
        font-style normal
        font-size 26px
        line-height 22px
        padding-left 6px

    p
      width 220px
      font-size 20px
      margin 0 auto
      line-height 24px

.section-partners
  text-align center
  margin 0 -40px

  li
    display inline-block
    vertical-align top
    margin 0 40px

    .section-partners-image
      height 120px
      margin-bottom 12px
      position relative

      &:after
        content ''
        width 1px
        height 100%
        display inline-block
        vertical-align middle

      img
        max-height 100%
        display inline-block
        vertical-align middle

.section-info
  background $grey
  padding 44px 0 60px

  .section-head
    margin-bottom 46px

  .section-headline
    text-align center


.contacts
  padding-top 50px

  #map
    width 100%
    height 600px

  .base-col
    position relative
    z-index 1

  .contacts-text
    width 585px
    height 600px
    padding 45px 50px
    box-sizing border-box
    background rgba(255,255,255,.8)
    position absolute
    top 0
    right 0
    font-size 18px
    line-height 26px

    .section-headline
      padding-bottom 24px

    p
      padding-bottom 24px
