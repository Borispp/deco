.popup_active
  overflow hidden

#overlay
  background rgba(0,0,0, 0.6)
  position fixed
  z-index 9998
  top 0
  left 0
  width 100%
  height 100%

.closePopup
  position absolute
  z-index 1
  top 20px
  right 20px
  sprite($s-close)
  cursor pointer
  opacity 1
  transition opacity .2s

  &:hover
    opacity .75


.popup--wrapper
  background #fff
  position fixed
  z-index 9999
  top 50%
  left 50%
  text-outline 50%
  will-change transform
  transform translate(-2500px, -50%)
  background #fff
  padding 40px 50px
  width 100%
  max-width 800px
  max-height 100vh
  overflow-y scroll
  box-sizing border-box
  border-radius 24px
  transition transform .3s
  borderbox()

  &.full
    width calc(100vw - 50px)
    max-width none
    padding 0

  &.popupOpened
    transform translate(-50%, -50%)

.popup-head
  width 100%
  max-width 600px
  margin 0 auto 30px
  font-size 18px

  .section-headline
    text-align center
    margin-bottom 30px

.popup-form
  width 100%
  max-width 370px
  margin 0 auto

  .input, .btn
    width 100%
    margin-bottom 18px
